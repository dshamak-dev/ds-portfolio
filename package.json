{
  "name": "dshamak-portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "browser": {
    "electron": false
  },
  "simple-webp-converter": {
    "src": "public/assets/uploads/**/*.{png,jpg}"
  },
  "scripts": {
    "prod-build": "npm run clean-build && npm run copy-files && npm run build",
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "start": "node server",
    "clean-build": "rm -r public",
    "copy-files": "mkdir -p public && npm run copy-index && npm run copy-assets && npm run copy-uploads",
    "copy-index": "cp src/index.html public/",
    "copy-assets": "mkdir -p public/assets/uploads && cp assets/* public/assets/",
    "copy-uploads": "mkdir -p public/assets/uploads && cp -r uploads/* public/assets/uploads/ && npm run generate-webp && rm public/assets/uploads/*.jpg && rm public/assets/uploads/*.png",
    "generate-webp": "simple-webp-converter"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.21.0",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.0",
    "@types/node": "^18.14.1",
    "@types/react": "18.0.28",
    "@types/react-helmet": "^6.1.6",
    "autoprefixer": "10.4.13",
    "babel-loader": "9.1.2",
    "babel-plugin-module-resolver": "^5.0.0",
    "copy-webpack-plugin": "11.0.0",
    "css-loader": "6.7.3",
    "html-webpack-plugin": "5.5.0",
    "postcss": "8.4.21",
    "postcss-loader": "7.0.2",
    "postcss-preset-env": "8.0.1",
    "simple-webp-converter": "^1.0.3",
    "style-loader": "3.3.1",
    "tailwindcss": "3.2.7",
    "ts-loader": "9.4.2",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "classnames": "2.3.2",
